{
  "include": [
    "./src/**/*"
  ],
  "compilerOptions": {
    "module": "esnext",
    "target": "es5",
    "moduleResolution": "node",
    "jsx": "react-jsx",
    "baseUrl": ".",
    "lib": [
      "dom",
      "es6",
      "es5",
      "dom.iterable", 
      "scripthost"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "incremental": true,
    "noImplicitAny": false,
    "suppressImplicitAnyIndexErrors": true,
    "strict": true,
    "removeComments": true,
    "sourceMap": true,
    "allowSyntheticDefaultImports": true,
    "noFallthroughCasesInSwitch": true
  }
}
